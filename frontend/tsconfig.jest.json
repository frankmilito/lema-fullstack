{
    "compilerOptions": {
        "target": "ES2022",
        "module": "commonjs",
        "lib": [
            "ES2022",
            "DOM",
            "DOM.Iterable"
        ],
        "moduleResolution": "node",
        "jsx": "react-jsx",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "skipLibCheck": true,
        "types": [
            "jest",
            "@testing-library/jest-dom",
            "node"
        ],
        "baseUrl": ".",
        "paths": {
            "@app/*": [
                "src/app/*"
            ],
            "@features/*": [
                "src/features/*"
            ],
            "@shared/*": [
                "src/shared/*"
            ],
            "@assets/*": [
                "src/assets/*"
            ]
        }
    },
    "include": [
        "src"
    ]
}